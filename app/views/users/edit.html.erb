<div class="whiteblock">
<div class="row">
<div class="col-md-offset-1 col-md-5">
<%= form_for(@user) do |f| %>
  <div>
    <label for="inputEmail">名前</label>
      <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"name" %>
  </div>
  <div>
    <div>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    </div>
    <label for="inputEmail">プロフィール画像</label>
      <%= f.attachment_field :profile_image, placeholder: "ProfileImage" %>
  </div>
  <%= f.submit "変更を保存", class: "btn btn-outline-dark float-right" %>
<% end %>
</div>
</div>
</div>