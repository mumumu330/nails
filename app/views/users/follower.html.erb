<div class="col-md-offset-3 col-md-6">
	<div class="whiteback">
		<div class="whiteblock">
			<div class="row">
				<div class="col-md-offset-1 col-md-10">
  				<h2>フォロー一覧</h2>
    				<div class="container">
		  				<div class="row">
			  				<section class="col-xs-12">
					    		<% @users.each do |user| %>
							      <li>
								      <%= attachment_image_tag user, :profile_image, size: "60x60", fallback: "no_image.jpg", size: "50x50" %>
							      </li>
							      <li><%= user.name %></li>
							      <li><%= "フォロー数: #{user.follower.count}" %></li>
							      <li><%= "フォロワー数: #{user.followed.count}" %></li>
							      <li><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %></li><br>
              		<% end %>
        				</section>
      				</div>
    				</div>
				</div>
			</div>
		</div>
	</div>
</div>