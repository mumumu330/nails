<body>
  <h2>Follow Users</h2>
    <div class="container">
		  <div class="row">
			  <section class="col-xs-12">
          <table class="table table-hover table-inverse">
            <thead>
						  <tr>
							  <th>image</th>
							  <th>name</th>
							  <th></th>
						  </tr>
					  </thead>
					    <% @users.each do |user| %>
					      <tbody>
						      <tr>
							      <td>
								      <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
							      </td>
							      <td><%= user.name %></td>
							      <td><%= "フォロー数: #{user.follower.count}" %></td>
							      <td><%= "フォロワー数: #{user.followed.count}" %></td>
							      <td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %></td>
						      </tr>
					      </tbody>
              <% end %>
          </table>
        </section>
      </div>
    </div>
</body>