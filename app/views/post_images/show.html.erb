<div>
<div>
<%= attachment_image_tag @post_image, :image %>
</div>
<div>
<ul>
<li>
By<a href="#"><%= @post_image.user.name %></a>
</li>
<li>
<%= @post_image.created_at.strftime('%Y/%m/%d') %>
</li>
<% if @post_image.favorited_by?(current_user) %>
  <li>
  <a href="#">
  <%= link_to post_image_favorites_path(@post_image), method: :delete do %>
  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
  <a href="#"><%= @post_image.favorites.count %>いいね</a>
  <% end %>
  </a>
  </li>
  <% else %>
  <li>
  <a href="#">
  <%= link_to post_image_favorites_path(@post_image), method: :post do %>
  <i class="fa fa-heart-o" aria-hidden="true"></i>
  <%= @post_image.favorites.count %>いいね
  <% end %>
  </a>
  </li>
<% end %>
<li>
<a href="comment"><%= @post_image.post_comments.count %></a>
</li>
<li>
<% if @post_image.user == current_user %>
  <%= link_to 'destroy', post_image_path(@post_image), method: :delete %>
<% end %>
</li>
</ul>
<div>
<p><%= @post_image.caption %></p>
</div>
<div>
<h2><%= @post_image.post_comments.count %>件コメント</h2>
</div>

<ol>
<% @post_image.post_comments.each do |post_comment| %>
<li>
<%#= attachment_image_tag post_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>

<div>
<a href="#"><%= post_comment.user.name %></a>
<span>
<span><%= @post_image.created_at.strftime('%Y/%m/%d') %></span>
</span>
</div>

<% if @post_image.favorited_by?(current_user) %>
<li>
<%= link_to post_image_favorites_path(@post_image), method: :delete do %>
<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
<%= @post_image.favorites.count %>いいね
<% end %>
</li>
<% else %>
<li>
<%= link_to post_image_favorites_path(@post_image), method: :post do %>
<i class="fa fa-heart-o" aria-hidden="true"></i>
<% @post_image.favorites.count %>いいね
<% end %>
</li>
<% end %>

<div><%= post_comment.comment %></div>
<% if post_comment.user == current_user %>
  <div>
    <%= link_to 'destroy', post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete %>
  </div>
<% end %>

<% end %>
</ol>
<div>
<h3>
<span>comment</span>
</h3>
</div>
<%= form_for [@post_image, @post_comment] do |f| %>
<div>
<%= f.text_field :comment, placeholder: "comment" %>
</div>
<%= f.submit "sent" %>
<% end %>
</div>
</div>