<!DOCTYPE html>
<html>
  <head>
    <title>Nails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
  </head>

  <body>
  <header>
  <div class="container clearfix">
    <%= image_tag'logo.png', :size => '100x100' %>
    <div class="menu-box">
      <span></span>
      <span></span>
      <span></span>
    </div>
  <nav>
  <ul class="nav">
  <% if user_signed_in? %>
  <li class="nav-list">
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
  </li>
  <li class="nav-list">
    <%= link_to '投稿', new_post_image_path %>
  </li>
  <li class="nav-list">
    <%= link_to '一覧', root_path %>
  </li>
  <li class="nav-list">
    <%= link_to 'マイページ', user_path(current_user.id) %>
  </li>
  <% else %>
  <li class="nav-list">
    <%= link_to '新規登録', new_user_registration_path %>
  </li>
  <li class="nav-list">
    <%= link_to 'ログイン', new_user_session_path %>
  </li>
  <% end %>
  </ul>
  </nav>
  </div>
  </header>
  <% if user_signed_in? %>
  <div class="search-form" style="margin-right: 70px; text-align: right;">
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'search[content]' %>
      <%= select_tag 'search[model]', options_for_select({ "ユーザー" => "user", "投稿" => "post_image" }) %>
      <%= select_tag 'search[method]', options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
      <%= submit_tag '検索' %>
    <% end %>
  </div>
<% end %>
  
    <%= yield %>
  
  </body>
</html>
